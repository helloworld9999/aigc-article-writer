# AI文章撰写工具环境配置文件模板
# 复制此文件为 .env 并填入实际的配置值

# ==================== AI模型配置 ====================
# OpenAI API配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.8

# 其他AI模型配置（可选）
CLAUDE_API_KEY=your_claude_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# ==================== Flask应用配置 ====================
SECRET_KEY=your_secret_key_here_change_this_in_production
FLASK_ENV=development
FLASK_DEBUG=True

# ==================== 数据库配置 ====================
DATABASE_URL=sqlite:///articles.db
DATABASE_ECHO=False

# ==================== 新闻源配置 ====================
# 新闻API密钥
NEWS_API_KEY=your_news_api_key_here
TENCENT_NEWS_API_KEY=your_tencent_api_key_here

# 新闻获取配置
NEWS_FETCH_TIMEOUT=10
NEWS_FETCH_RETRY=3
NEWS_CACHE_DURATION=1800
MAX_NEWS_PER_SOURCE=20

# ==================== 文章生成配置 ====================
# 文章存储
ARTICLES_DIR=articles
MAX_ARTICLES_PER_USER=100
MAX_ARTICLES_PER_DAY=50

# 文章质量控制
ARTICLE_MIN_LENGTH=500
ARTICLE_MAX_LENGTH=2000
AI_FALLBACK_ENABLED=True

# ==================== Web服务配置 ====================
WEB_HOST=0.0.0.0
WEB_PORT=5000
WEB_THREADS=4

# ==================== 缓存配置 ====================
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# ==================== 日志配置 ====================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# ==================== 安全配置 ====================
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ==================== 性能配置 ====================
REQUEST_TIMEOUT=30
MAX_CONTENT_LENGTH=16777216
